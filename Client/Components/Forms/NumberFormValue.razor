@using System.Text.Json
@using System.Text.RegularExpressions
@inherits FormValueBase<double?>

@* This component displays input controls for a number form value *@


@if (_paramsValid)
{
    <MudTextField T=double? @bind-Value=_value
              Required=@(!_optional)
              Immediate
              Label=@(Schema!.Title)
              HelperText=@(Schema!.Description)
              Error=@(_errorHints.Any())
              ErrorText=@(_errorHint) />
}
