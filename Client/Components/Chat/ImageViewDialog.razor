@using BlazorChat.Client.Services
@inject IMediaResolverService _mediaService
@inject IStringLocalizer<Pages.Chat> Loc

@* This dialog component displays a picture in fullscreen
   This entire thing is a massive hack and should probably be redone *@

<MudDialog Style=@($"width: 100%; height: 100%; max-width: unset; background-color: rgba(0, 0, 0, 65%); border-radius: unset") Class="enlargedialogchild" ContentStyle="width: 100%; height: 100%; padding: unset">
    <DialogContent>
        <div class="imagecontain">
            <img src=@(_url) />
        </div>
        <div class="top">
            <span class="title">@(_title)</span>
            <div class="entry">
                <span class="key">@(Loc["size"])</span>
                <span class="value">@(_sizeInfo)</span>
            </div>
        </div>
        <div class="bottom">
            <MudButton OnClick=@(() => DialogInstance?.Close()) Variant=@(Variant.Filled) Color=@(Color.Primary)>@(Loc["close"])</MudButton>
        </div>
    </DialogContent>
</MudDialog>


